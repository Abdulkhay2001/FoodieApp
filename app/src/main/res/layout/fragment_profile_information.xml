<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.profileInformation.ProfileInformationFragment">

    <include
        android:id="@+id/ic_personal_information"
        layout="@layout/tool_bar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_personal_information"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_personal_information">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_round_account_circle_24"
            app:tint="#adb2b4" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#f7f8fa"
        android:drawableStart="@drawable/ic_camera_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Take photo"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:drawableTint="#b3b6be"
        app:layout_constraintBottom_toBottomOf="@+id/cv_personal_information"
        app:layout_constraintStart_toEndOf="@+id/cv_personal_information"
        app:layout_constraintTop_toTopOf="@+id/cv_personal_information"
        />

    <View
        android:id="@+id/view_personal_information"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="25dp"
        android:background="#f6f7f9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_personal_information" />

    <TextView
        android:id="@+id/tv_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_personal_information"
        android:layout_margin="15dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_name_profile_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
        android:text="Some name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#d6d6d6"
        app:layout_constraintStart_toStartOf="@+id/tv_name_profile_information"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_profile_information"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_profile_information"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_mail_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:text="mail"
        android:layout_margin="15dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_mail_profile_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mail_profile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="some mail"
        android:textSize="20sp"
        android:textColor="@color/black"
        />




</androidx.constraintlayout.widget.ConstraintLayout>